@model IEnumerable<GBC_Travel_Group_76.Models.CarRent>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Booking List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer Name</th>
            <th>Car Model</th>
            <th>Booking Date</th>            
        </tr>    
    <tbody>
        @foreach (var CarRentBooking in Model)
        {
            <tr>
                <td>@CarRentBooking.Model</td>
                <td>@CarRentBooking.PickUpLocation</td>
                <td>@CarRentBooking.DropOffLocation</td>
                <td>
                    <a asp-action="Details" asp-route-id="@CarRentBooking.Model">Details</a> |
                    <a asp-action="Edit" asp-route-id="@CarRentBooking.PickUpLocation">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@CarRentBooking.DropOffLocation">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">New Booking</a>
