@model GBC_Travel_Group_76.Models.Booking

<h1>Book Flight</h1>

<<div class="form-group">
    <label asp-for="PassengerId">Flight Id:</label>
    <input asp-for="PassengerId" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="PassengerName">Airline:</label>
    <input asp-for="PassengerName" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="FlightId">Origin:</label>
    <input asp-for="FlightId" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="DepartureTime">Destination:</label>
    <input asp-for="DepartureTime" class="form-control" readonly />
</div>

<div class="form-group">
    <label asp-for="ArrivalTime">Arrival Date and Time:</label>
    <input asp-for="ArrivalTime" class="form-control" readonly />
</div>

<button type="submit" class="btn btn-primary">Confirm Booking</button>
