@model IEnumerable<GBC_Travel_Group_76.Models.Booking>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Booking List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>User Name</th>
            <th>Flight ID</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.PassengerId</td>                
                <td>@booking.FlightId</td>
                <td>@booking.PassengerName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@booking.PassengerId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@booking.PassengerId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@booking.PassengerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">New Booking</a>
