            </div>
            <div class="form-group">
                <label asp-for="ArrivalDateTime" class="control-label"></label>
                <input asp-for="ArrivalDateTime" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Passengers" class="control-label"></label>
                <textarea asp-for="Passengers" class="control-label"><</textarea>
            </div>
