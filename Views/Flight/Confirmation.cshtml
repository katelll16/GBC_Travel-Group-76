@model GBC_Travel_Group_76.Models.Flight



@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container">
    <h2>Booking Confirmation</h2>

    <p>Your booking has been confirmed. Details:</p>

    <ul>
        <li><strong>Check-In Date:</strong> @Model.DepartureDateTime</li>
        <li><strong>Check-Out Date:</strong> @Model.ArrivalDateTime</li>
        <li><strong>Number of Guests:</strong> @Model.SeatNumber</li>
    </ul>

    <p>Thank you for choosing our Airline!</p>
</div>
